package com.company;
import java.util.Scanner;
public class Main {





    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        System.out.print("hey its meee mariooo, enter the height of the pyrimid you want please: ");

        int howtall = scanner.nextInt();
        for(int counter = 1; counter<= howtall; counter++)
                   {
             for (int theory = 0; theory < howtall -counter; theory++)
                System.out.print(" ");
             for (int j=0;j<=2*counter;j++)
                         {
                 if(j==counter)
                    System.out.print(" ");
                   else
                     System.out.print("#");
            }
                       System.out.println();
        }
    }
}






